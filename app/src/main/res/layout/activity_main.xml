
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/service_stopped"/>

    <Switch
        android:id="@+id/swService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启/关闭 监听"/>

    <Button
        android:id="@+id/btnPerm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_permissions"/>

    <Button
        android:id="@+id/btnBattery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ignore_battery"/>

    <TextView
        android:id="@+id/tvLastPushTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/last_push"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvLastPush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="08:15 来自 10086：您的验证码是 123456"/>

</LinearLayout>
